<p id="error"><%= @notice %></p>

<h1>Users</h1>

<% if @users %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>File</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.file %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<form action="/users" method="POST">
  <p>
    Request would fail on purpose when saving a file to carrierwave storage (local).
  </p>
  <input type="submit" value="Add image with carrierwave"/>
</form>

